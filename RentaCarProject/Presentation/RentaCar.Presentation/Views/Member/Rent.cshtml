@using Application.CQRS.Commands.Rent.CreateRent
@model CreateRentCommandResponse

<form asp-action="Rent" asp-controller="Member" method="post">

    <div class="mb-3">
        <label>
            TcNo:
        </label>
        <span class="text-danger" asp-validation-for=@Model.TcNo></span>
        <input type="text" asp-for=@Model.TcNo class=form-control />
    </div>

    <br />

    <div class="mb-3">
        <label>
            Isim:
        </label>
        <span class="text-danger" asp-validation-for=@Model.Name></span>
        <input type="text" asp-for=@Model.Name class=form-control />
    </div>

    <br />

    <div class="mb-3">
        <label>
            Soyisim:
        </label>
        <span class="text-danger" asp-validation-for=@Model.Surname></span>
        <input type="text" asp-for=@Model.Surname class=form-control />
    </div>

    <br />

    <div class="mb-3">
        <label>
            Baslangic Tarihi:
        </label>
        <span class="text-danger" asp-validation-for=@Model.StartingTime></span>
        <input type="text" asp-for=@Model.StartingTime class=form-control />
    </div>

    <br />

    <div class="mb-3">
        <label>
            Bitis Tarihi:
        </label>
        <span class="text-danger" asp-validation-for=@Model.FinisihingTime></span>
        <input type="text" asp-for=@Model.FinisihingTime class=form-control />
    </div>

    <br />



    <div>
        <button>
            Onaya Yolla
        </button>
    </div>

    <div>
        @ViewBag.ErrorMessage
    </div>

</form>